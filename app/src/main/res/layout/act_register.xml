<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:gravity="center|top"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mine_avatar"
                android:layout_width="96dip"
                android:layout_height="96dip"
                android:layout_marginTop="30dip"
                android:src="@mipmap/meinv"
                app:civ_border_color="@color/font_color_ffffff"
                app:civ_border_width="2dp" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/nick_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:hint="nickname"
                android:text=""
                android:textSize="14sp"
                app:met_baseColor="@color/font_color_ffffff"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="6"
                app:met_primaryColor="@color/font_color_ffffff"
                app:met_singleLineEllipsis="true" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:hint="phone"
                android:inputType="number"
                android:text=""
                android:textSize="14sp"
                app:met_baseColor="@color/font_color_ffffff"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="20"
                app:met_primaryColor="@color/font_color_ffffff"
                app:met_singleLineEllipsis="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:hint="password"
                android:inputType="textPassword"
                android:text=""
                android:textSize="14sp"
                app:met_baseColor="@color/font_color_ffffff"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="20"
                app:met_primaryColor="@color/font_color_ffffff"
                app:met_singleLineEllipsis="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/password_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:hint="password"
                android:inputType="textPassword"
                android:text=""
                android:textSize="14sp"
                app:met_baseColor="@color/font_color_ffffff"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="20"
                app:met_primaryColor="@color/font_color_ffffff"
                app:met_singleLineEllipsis="true" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:hint="sign"
                android:text=""
                android:textSize="14sp"
                app:met_baseColor="@color/font_color_ffffff"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="20"
                app:met_primaryColor="@color/font_color_ffffff"
                app:met_singleLineEllipsis="true" />


            <TextView
                android:id="@+id/tv_rigister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dip"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:paddingBottom="15dip"
                android:paddingTop="15dip"
                android:text="注册"
                android:textColor="@color/font_color_ffffff" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
